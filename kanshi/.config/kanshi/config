profile {
	output DP-5 mode 3840x2160 scale 1 position 0,0
	output eDP-1 mode 2256x1504 scale 1.5 position 3840,0
	exec swaymsg workspace 1, move workspace to DP-5 
	exec swaymsg workspace 2, move workspace to eDP-1 
}

profile {
	output HDMI-A-1 mode 3840x2160 scale 1 position 0,0
	output eDP-1 mode 2256x1504 scale 1.5 position 3840,0
	exec swaymsg workspace 1, move workspace to DP-1 
	exec swaymsg workspace 2, move workspace to eDP-1 
}

profile {
	output eDP-1 mode 2256x1504 scale 1.5
	exec swaymsg workspace 1, move workspace to eDP-1 
}
