profile {
	output DP-5 mode 3840x2160 scale 1 position 0,0
	output eDP-1 mode 2256x1504 scale 1.25 position 3840,0
	output DP-4 disable
	exec swaymsg workspace 1, move workspace to DP-5 
	exec swaymsg workspace 2, move workspace to eDP-1 
}

profile {
	output DP-5 mode 3840x2160 scale 1 position 0,0
	output eDP-1 mode 2256x1504 scale 1.25 position 3840,0
	exec swaymsg workspace 1, move workspace to DP-5 
	exec swaymsg workspace 2, move workspace to eDP-1 
}

profile {
	output DP-4 mode 3840x2160 scale 1 position 0,0
	output eDP-1 mode 2256x1504 scale 1.25 position 3840,0
	exec swaymsg workspace 1, move workspace to DP-4
	exec swaymsg workspace 2, move workspace to eDP-1 
}

profile {
	output HDMI-A-1 mode 3840x2160 scale 1 position 0,0
	output eDP-1 mode 2256x1504 scale 1.25 position 3840,0
	exec swaymsg workspace 1, move workspace to HDMI-A-1 
	exec swaymsg workspace 2, move workspace to eDP-1 
}

profile {
