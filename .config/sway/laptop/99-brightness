# Monitor brightness
bindsym XF86MonBrightnessDown exec brightnessctl set 5%-
bindsym XF86MonBrightnessUp exec brightnessctl set +5%

# Keyboard backlight
exec cat $HOME/.config/sway/state/keyboard > /sys/class/leds/tpacpi::kbd_backlight/brightness
bindsym XF86Keyboard exec $HOME/.config/sway/scripts/keyboard_backlight.sh
