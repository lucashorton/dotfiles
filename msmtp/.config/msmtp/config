defaults
auth on
tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile ~/.config/msmtp/msmtp.log

# Fastmail
account lucashorton.com 
host mail.lucashorton.com
port 587
from lucas@lucashorton.com
user lucas@lucashorton.com
passwordeval "gpg -quiet --for-your-eyes-only --no-tty --decrypt ~/.config/msmtp/msmtp-credentials.gpg"
account default: lucashorton.com 
